.header
    position absolute
    left 0
    top 0
    width 100%
    padding-top 2em
    
    &__wrap
        align-items center
        display flex
        justify-content space-between
        flex-wrap wrap

        +xl-block()
            margin 0 -3em

.menu-glavnoe-container
    width 100%
    display none

    +md-block()
        width auto
        display block!important

.menu
    +md-block()
        display flex
    
    &-item
        text-align center
        text-transform uppercase
        padding 0 1em   
        padding-top 1em 

        +md-block()
            padding-top 0

            &:last-child
                padding-right 0
    
        a
            text-decoration none
            letter-spacing .2em
            text-indent: 0.2em

.sandwich
    cursor pointer
    height 20px
    position relative
    width 32px
    margin-left auto

    +md-block()
        display none
    
    &.is
        &-active
            .sandwich__line
                &--top
                    top 10px
                    transform rotate(45deg)
                &--middle
                    opacity 0
                &--bottom
                    top 10px
                    transform rotate(-45deg)
    
    &__line
        background-color #fff
        display block
        height 2px
        left 0
        position absolute
        transition all linear .4s
        width 100%
        
        &--top
            top 0
        
        &--middle
            top 9px
        
        &--bottom
            top 18px

