.quotes
	padding 6em 0 4.5em
	max-width 32em
	margin auto
	position relative

	&__slide
		text-align center

	.owl-next
	.owl-prev
		position absolute
		top 58%
		outline none

		+xs-block()
			top 56%

		+sm-block()
			top 53%		
	
	.owl-next
		right 18%

	.owl-prev
		right 73%		

.quotes-slide

	&__title
		text-align center
		font-size 1.875rem
		letter-spacing 0.09em
		line-height 1.1em

	&__img-wrap
		width 107px
		margin auto
		padding 4em 0 2.25em

	&__name
		font-size 1.5rem
		color #738cbe
		font-weight bold
		padding-bottom 0.9em	

	&__merit
		font-size 1rem
		color #738cbe
		font-weight 500
		width 50%
		margin auto