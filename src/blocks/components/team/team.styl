.team
	padding 2.5em 0 4.4em

	+lg-block()
		padding 2.5em 10.5em 4.4em

	+xs-block()
		padding 2.5em 1.9em 4.4em	

	&__title
		font-size 2.75rem
		color #4366ae
		text-align center
		text-transform uppercase
		margin-bottom 1.36em
		letter-spacing: 0.20em

.team-members
	display block
	justify-content space-between

	+lg-block()
		display flex

.team-member
	width 50%
	color #6a707c
	margin auto
	&:not(:last-child)
		border-bottom: 1px solid #f0f0f2
		padding-bottom 4em

		+lg-block()
			border-right: 1px solid #f0f0f2
			margin 0
			border-bottom	none
			padding 0		
	
	&:last-child

		padding-top 4em

		+lg-block()
			padding-left 9em
			padding-top 0

	&__name,
	&__position
		font-size 1.125rem
		line-height: 1.5em
	
	&__name
		text-transform uppercase
		font-weight bold
	
	&__text
		width 95%
		font-size 1rem
		font-weight	light
		line-height 1.5
		padding-top 2.25em

	&__text-short
		font-size 1rem
		font-weight	light
		line-height 1.5
		padding-top 2.25em

		+lg-block()
			width 55%

	&__group
		display block

		+xl-block()
			display flex

	&__img-descr
		padding 3em 0 0 0

		+xl-block()
			padding 3em 0 0 1.725em 	

	&__img
		
		+lg-block()
			padding-left 0			
	
