.section--summary
    margin-top -10em

.summary 
    text-align center
    padding 2em 1em
    display flex
    flex-direction column
    align-items center
    justify-content center

    &__title
        font-size 1.5rem
        font-weight 300
        margin-bottom 1em
        letter-spacing .05em
    
    &__descr
        font-size 1rem
        font-weight 300
        margin-bottom 3em
        line-height 1.5

        &-link
            color #4366ae
    
    &__btn
        font-size .88rem
        text-transform uppercase
        padding .6em 3em .5em
        letter-spacing .15em
        border-radius .1em
    
    
    +md-block()
        padding 4em 3em 5em
        
        &__title
            font-size 2.3rem
            max-width 28em
        
        &__descr
            font-size 1.5rem
            max-width 20em
        
        