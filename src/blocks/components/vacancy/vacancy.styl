.section--vacancy
	background-size cover
	background-repeat no-repeat
	padding-bottom 14.5em
	background-color: #0d2d77
	background-position center

.vacancy-content

	&__slider
		position relative

		.owl-next
		.owl-prev
			position absolute
			top -2%	
			outline none 

			+sm-block()
				top 0

			+md-block()
				top 2%	

			+xl-block()
				top 4%

		.owl-next
			right 5%
			
			+sm-block()
				right -5%

			+md-block()
				right 5%	

			+lg-block()
				right 7%

		.owl-prev
			right 90%	

			+sm-block()
				right 100%	

			+md-block()
				right 91%	

	&__title
		text-align center
		font-size 1.125rem
		font-weight normal
		letter-spacing 0.4em
		text-transform uppercase
		padding 3.05em 0 3.61em 0

	&__slide-title
		font-size 1.2rem
		text-transform uppercase
		text-align center

		+sm-block()
			font-size 2rem

		+lg-block()
			font-size 2.5rem	

		+xl-block()
			font-size 3rem	

	&__slide-text
		font-size 1.125rem
		width 55%
		text-align center
		letter-spacing 0.03em
		line-height 1.8

		+sm-block()
			width 70%

		+md-block()
			width 59%

		+lg-block()
			width 44%

		+xl-block()
			width 40% 				

	&__slide-descr
		display flex
		justify-content center
		padding 2em 0 6.5em 0		
	
	&__application
		max-width 700px
		margin auto

	&__application-display
		padding-bottom 3.5625em
		display flex
		justify-content center
		cursor pointer

	&__application-text
		font-size 1rem	
		text-align center
		padding-left 0.75em
		margin-bottom 3.5625em
		

	&__application-arrow.transform
		transform rotate(180deg)
		
	&__application-arrow
		margin-left 0.625em	

.form
	&__group
		margin-bottom 1.25em

	&__field
		font-size 0.875rem	
		display block
		outline none 
		background-color transparent
		border none 
		border-bottom 1px solid #8794ae
		width 100%
		padding-bottom 0.5em
		margin-bottom 2.15em
		color #8794ae
		&::placeholder
			color #8794ae
	
	&__file-btn
		font-size 1rem
		border 1px solid #fff
		display flex
		justify-content center
		align-items center
		cursor pointer
		position relative
		padding: 1.06em 2em
	
	&__file-choose
		display flex
		align-items center
		position relative

	&__field-file
		width 100%
		height 100%
		opacity 0
		border 0
		appearance none
		background none
		position absolute
		z-index 1
		cursor pointer

	&__btn-label
		&.is-disabled
			display none

	&__file-name,
	&__file-remove
		display none

		&.is-active
			display block
	
	&__file-remove
		position absolute
		z-index 2
		left -3em	

	&__btn
		font-size 1rem
		font-weight 600
		text-transform uppercase
		text-decoration none
		color #4366ae
		background-color #fff
		padding 1.06em 2em
		text-align center
		width 100%
		border none 
		outline none
		cursor pointer

